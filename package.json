{
  "name": "buidler-ethers-boilerplate",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "buidler": "buidler",
    "test": "TS_NODE_TRANSPILE_ONLY=1 buidler test",
    "build": "rm -rf typings && buidler clean && yarn compile && yarn gen:typings",
    "compile": "buidler --max-memory 4096 compile",
    "gen:typings": "rm -f typings/contracts/* && typechain --target ethers --outDir typings/contracts './artifacts/*.json'",
    "deploy:rinkeby-dev": "buidler run --network dev scripts/deploy.ts"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "^1.3.0",
    "@nomiclabs/buidler-ethers": "^1.3.0",
    "@nomiclabs/buidler-etherscan": "^1.3.0",
    "@nomiclabs/buidler-waffle": "^1.3.0",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.2",
    "buidler-gas-reporter": "^0.1.3",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^2.4.1",
    "ethers": "^4.0.47",
    "ts-node": "^8.9.0",
    "typechain": "^1.0.5",
    "typechain-target-ethers": "^1.0.4",
    "typescript": "^3.8.3"
  }
}
